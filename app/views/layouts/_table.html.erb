<% if !@crawls.nil? %>
<% if !@crawls.empty? %>

<div class="col-sm-9">
<table class="table table-bordered">
  <thead>
    <tr>
      <th  class="table_tr" scope="col">SITE NAME</th>
      <th  class="table_tr" scope="col">URL</th>
      <th  class="table_tr" scope="col">EMAIL</th>
       <% if has_role?("admin") %>
      <th  class="table_tr" scope="col">PHONE</th>
      <% end %>
      <th  class="table_tr" scope="col">TIMESTAMP</th>
    </tr>
  </thead>
  <tbody>
  <% @crawls.each do |crawl| %>
    <tr>
      <td><%= crawl.site_name %></td>
      <td><%= crawl.url %></td>
      <td><%= crawl.email %></td>
      <% if has_role?("admin") %>
      <td><%= crawl.phone_number %></td>
       <% end %>
      <td><%= crawl.created_at %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
<% end %>
<% end %>